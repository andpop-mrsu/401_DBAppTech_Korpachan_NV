{
  "name": "kornyshon/guess-number",
  "description": "Console Guess-number game (variant 2)",
  "type": "project",
  "bin": [
    "bin/guess-number"
  ],
  "require": {
    "php": ">=8.0",
    "wp-cli/php-cli-tools": "^v0.12.6"
  },
  "autoload": {
    "files": [
      "src/Controller.php",
      "src/View.php",
      "src/Game.php"
    ]
  },
  "authors": [
    {
      "name": "Nikita Korpachan",
      "email": "niknemo_lol@mail.com"
    }
  ],
  "require-dev": {
    "squizlabs/php_codesniffer": "^4.0"
  },
  "scripts": {
    "phpcs": "./vendor/bin/phpcs --standard=PSR12 src bin",
    "phpcs-fix": "./vendor/bin/phpcbf --standard=PSR12 src bin"
  }
}
